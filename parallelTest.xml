<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Parallel Test Suite" parallel="methods" thread-count="3">
    <listeners>
        <listener class-name="utilities.ExtentReportsUtility"></listener>
    </listeners>
    
    <!-- Chrome Tests -->
    <test name="Chrome Tests">
        <parameter name="os" value="windows" />
        <parameter name="browser" value="chrome" />
        <parameter name="version" value="latest" />
        <classes>
            <class name="testCases.Scenario1" />
        </classes>
    </test>
    
    <!-- Firefox Tests -->
    <test name="Firefox Tests">
        <parameter name="os" value="windows" />
        <parameter name="browser" value="firefox" />
        <parameter name="version" value="latest" />
        <classes>
            <class name="testCases.Scenario2" />
        </classes>
    </test>
     <test name="Chrome Tests1">
        <parameter name="os" value="windows" />
        <parameter name="browser" value="chrome" />
        <parameter name="version" value="latest" />
        <classes>
            <class name="testCases.Scenario3" />
        </classes>
    </test>
</suite>
